---
import {
  Sparkles,
  Search,
  FileText,
  PenLine,
  BookOpen,
  Youtube,
  Lock,
  Link as LinkIcon,
} from "@lucide/astro";

const features = [
  {
    id: "fn-1",
    icon: Sparkles,
    title: "Many, Your AI Assistant",
    description: "Ask questions across all your content",
  },
  {
    id: "fn-2",
    icon: Search,
    title: "Semantic Search",
    description: "Find by meaning, not just keywords",
  },
  {
    id: "fn-3",
    icon: FileText,
    title: "PDF Annotations",
    description: "Highlight and comment directly",
  },
  {
    id: "fn-4",
    icon: PenLine,
    title: "Rich Editor",
    description: "Notion-style blocks & formatting",
  },
  {
    id: "fn-5",
    icon: BookOpen,
    title: "Bibliography",
    description: "Auto-generate citations (APA, MLA...)",
  },
  {
    id: "fn-6",
    icon: Youtube,
    title: "Video Library",
    description: "Save YouTube with metadata",
  },
  {
    id: "fn-7",
    icon: Lock,
    title: "100% Offline",
    description: "Your data never leaves your device",
  },
  {
    id: "fn-8",
    icon: LinkIcon,
    title: "Web Scraper",
    description: "Capture articles automatically",
  },
];
---

<section id="features" class="mental-map-section">
  <div class="section-header-center">
    <div class="section-label success">How It Works</div>
    <h2>Your knowledge, connected like neurons</h2>
    <p class="section-description">
      Dome doesn't just store files—it understands relationships. Every note,
      paper, and idea connects organically, with Many as your guide, creating
      your personal knowledge graph.
    </p>
  </div>

  <div class="mental-map-container">
    <!-- Many: solo el SVG en grande en el centro -->
    <div class="brain-center" aria-label="Many, your AI companion">
      <img
        src="/Many.svg"
        alt="Many"
        class="brain-many-img"
      />
    </div>

    {
      features.map((f) => {
        const Icon = f.icon;
        return (
          <div class={`feature-node ${f.id}`}>
            <div class="feature-node-icon">
              <Icon size={24} color="var(--color-accent)" />
            </div>
            <h3>{f.title}</h3>
            <p>{f.description}</p>
          </div>
        );
      })
    }
  </div>

  <div class="mental-map-grid-fallback">
    {
      features.map((f) => {
        const Icon = f.icon;
        return (
          <div class="feature-card-fallback">
            <div class="feature-node-icon">
              <Icon size={24} color="var(--color-accent)" />
            </div>
            <h3>{f.title}</h3>
            <p>{f.description}</p>
          </div>
        );
      })
    }
  </div>
</section>

<style>
  .mental-map-section {
    padding: 120px 40px;
    background: var(--color-bg);
    position: relative;
  }

  .section-header-center {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 80px;
  }

  .section-label {
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 16px;
  }

  .section-label.success {
    color: var(--color-accent);
  }

  .section-header-center h2 {
    font-size: 52px;
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin-bottom: 24px;
  }

  .section-description {
    font-size: 18px;
    line-height: 1.7;
    color: var(--color-text-secondary);
  }

  .mental-map-container {
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
    height: 640px;
    /* Centro del mapa: 50% 50% para Many */
  }

  .brain-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    pointer-events: none;
  }

  .brain-many-img {
    width: 280px;
    height: 280px;
    display: block;
    animation: pulse-brain 4s ease-in-out infinite;
  }

  @keyframes pulse-brain {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  .feature-node {
    position: absolute;
    width: 180px;
    padding: 20px;
    background: white;
    border: 2px solid var(--color-border);
    border-radius: 16px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s, border-color 0.3s, box-shadow 0.3s;
    z-index: 5;
    /* Centrado del nodo en su punto orbital */
    transform: translate(-50%, -50%);
  }

  .feature-node:hover {
    transform: translate(-50%, -50%) translateY(-8px);
    border-color: var(--color-accent);
    box-shadow: 0 16px 40px rgba(89, 96, 55, 0.2);
  }

  .feature-node-icon {
    width: 44px;
    height: 44px;
    background: var(--color-accent-light);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 12px;
  }

  .feature-node h3 {
    font-size: 15px;
    font-weight: 700;
    margin-bottom: 6px;
  }

  .feature-node p {
    font-size: 12px;
    color: var(--color-text-secondary);
    line-height: 1.45;
  }

  /* Órbitas: 8 nodos en círculo alrededor de Many (50%, 50%) */
  .fn-1 {
    left: 50%;
    top: 12%;
  }
  .fn-2 {
    left: 74%;
    top: 22%;
  }
  .fn-3 {
    left: 88%;
    top: 50%;
  }
  .fn-4 {
    left: 74%;
    top: 78%;
  }
  .fn-5 {
    left: 50%;
    top: 88%;
  }
  .fn-6 {
    left: 26%;
    top: 78%;
  }
  .fn-7 {
    left: 12%;
    top: 50%;
  }
  .fn-8 {
    left: 26%;
    top: 22%;
  }

  .mental-map-grid-fallback {
    display: none;
  }

  @media (max-width: 1024px) {
    .mental-map-container {
      display: none;
    }

    .mental-map-grid-fallback {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 1.5rem;
      max-width: 1000px;
      margin: 0 auto;
    }

    .feature-card-fallback {
      background: white;
      border: 2px solid var(--color-border);
      border-radius: 16px;
      padding: 24px;
      transition: all 0.3s;
    }

    .feature-card-fallback:hover {
      border-color: var(--color-accent);
      box-shadow: 0 8px 30px rgba(89, 96, 55, 0.15);
    }

    .feature-card-fallback .feature-node-icon {
      width: 48px;
      height: 48px;
      background: var(--color-accent-light);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 16px;
    }

    .feature-card-fallback h3 {
      font-size: 16px;
      font-weight: 700;
      margin-bottom: 8px;
    }

    .feature-card-fallback p {
      font-size: 13px;
      color: var(--color-text-secondary);
      line-height: 1.5;
    }
  }

  @media (max-width: 768px) {
    .mental-map-section {
      padding: 80px 20px;
    }

    .section-header-center h2 {
      font-size: 36px;
    }
  }
</style>
