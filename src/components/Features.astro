---
// Features section component
const features = [
  {
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="9" y1="3" x2="9" y2="21"></line><line x1="3" y1="9" x2="21" y2="9"></line></svg>`,
    title: "Knowledge Hub",
    description:
      "Centralized management of all your resources: Notion-style notes, annotated PDFs, YouTube videos, transcribed audios, images, URLs with automatic scraping, and folders for hierarchical organization.",
  },
  {
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2a10 10 0 1 0 10 10H12V2z"></path><path d="M12 2a10 10 0 0 1 10 10"></path><path d="M12 12 2.1 10.5"></path></svg>`,
    title: "AI Integration",
    description:
      "Martin AI assistant, semantic search, automatic transcription, and document summarization. Support for OpenAI, Anthropic, Google Gemini, Ollama (local), Venice, and custom providers.",
  },
  {
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>`,
    title: "PDF Viewer with Annotations",
    description:
      "Highlight, underline, strikethrough text, and add comments. Quick page navigation and zoom controls. All your annotations are saved locally.",
  },
  {
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"></path><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg>`,
    title: "Notion-Style Editor",
    description:
      "Advanced editor with modular blocks: headings, lists, tables, code, callouts, and more. Insert PDFs, files, and mentions with @. Quick commands with /.",
  },
  {
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="6" width="20" height="12" rx="2"></rect><path d="M17 10l-5-3-5 3v4l5 3 5-3v-4z"></path></svg>`,
    title: "YouTube Integration",
    description:
      "Extract thumbnails in multiple qualities, get metadata (title, channel, duration) and manage YouTube videos directly from Dome.",
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 21l1.65-3.8a9 9 0 1 1 3.4 2.9L3 21"/><path d="M9 10a.5.5 0 0 0 1 0V9a.5.5 0 0 0-1 0v1a5 5 0 0 0 5 5h1a.5.5 0 0 0 0-1h-1a.5.5 0 0 0 0 1"/></svg>`,
    title: "WhatsApp Integration",
    description:
      "Connect your WhatsApp to capture ideas, images, and audios from your mobile. Full mobile access to your knowledge hub with real-time synchronization.",
  },
  {
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line></svg>`,
    title: "Web Scraper",
    description:
      "Automatically extract web article content, capture screenshots, get Open Graph tags, and download images. Everything is saved offline for later access.",
  },
  {
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path></svg>`,
    title: "Academic Library",
    description:
      "Manage academic sources (articles, books, websites, videos, podcasts). Generate citations in multiple styles (APA, MLA, Chicago, Harvard, Vancouver, IEEE) and automatic bibliographies.",
  },
];
---

<section id="features" class="features">
  <div class="container">
    <div class="section-header">
      <span class="section-badge">Features</span>
      <h2>
        Everything you need to<br /><span class="highlight-text"
          >manage your knowledge</span
        >
      </h2>
      <p class="section-subtitle">
        Designed for researchers, academics, and professionals who need to
        organize information from multiple sources efficiently.
      </p>
    </div>

    <div class="features-grid">
      {
        features.map((feature, index) => (
          <div class="feature-card" style={`--delay: ${index * 0.1}s`}>
            <div class="feature-icon" set:html={feature.icon} />
            <h3>{feature.title}</h3>
            <p>{feature.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .features {
    padding: var(--section-padding) 0;
    position: relative;
  }

  .section-header {
    text-align: center;
    max-width: 600px;
    margin-inline: auto;
    margin-bottom: 4rem;
  }

  .section-badge {
    display: inline-block;
    background: var(--bg-tertiary);
    border: 1px solid var(--border);
    padding: 0.5rem 1rem;
    border-radius: 100px;
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    font-weight: 600;
  }

  .highlight-text {
    color: var(--text-secondary);
    font-style: italic;
    font-family: var(--font-sans);
    font-weight: 500;
  }

  .section-header h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 1rem;
  }

  .section-subtitle {
    color: var(--text-secondary);
    font-size: 1.1rem;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    max-width: 1200px;
    margin-inline: auto;
  }

  .feature-card {
    background: var(--glass);
    border: 1px solid var(--border);
    border-radius: 20px;
    padding: 2rem;
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    opacity: 0;
    animation: fade-in-up 0.8s ease-out forwards;
    animation-delay: var(--delay, 0s);
    min-height: 280px;
    height: 100%;
  }

  .feature-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    transition: opacity var(--transition-base);
    display: none; /* Removed gradient line */
  }

  .feature-card:hover {
    background: var(--bg-secondary);
    border-color: var(--border-hover);
    transform: translateY(-6px);
    box-shadow: 0 12px 24px -8px rgba(0, 0, 0, 0.12);
  }

  .feature-card:hover::before {
    opacity: 0;
  }

  .feature-icon {
    width: 48px;
    height: 48px;
    margin-bottom: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent-primary);
    flex-shrink: 0;
  }

  .feature-icon svg {
    width: 100%;
    height: 100%;
  }

  .feature-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    font-family: var(--font-display);
    line-height: 1.3;
  }

  .feature-card p {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.7;
    flex-grow: 1;
  }

  @media (max-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.25rem;
    }

    .feature-card {
      min-height: 260px;
      padding: 1.75rem;
    }
  }

  @media (max-width: 768px) {
    .features-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 0 1rem;
    }

    .feature-card {
      min-height: auto;
      padding: 1.5rem;
    }
  }
</style>
