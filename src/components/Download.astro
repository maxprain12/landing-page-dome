---
import { Download as DownloadIcon } from "@lucide/astro";
---

<section id="download" class="final-cta">
  <div class="final-cta-bg" aria-hidden="true">
    <img src="https://picsum.photos/seed/dome-download-cta/1920/800" alt="" />
    <div class="final-cta-overlay"></div>
    <div class="grain-overlay" aria-hidden="true"></div>
  </div>
  <div class="cta-content">
    <h2 class="cartel-title">Start building your knowledge universe with Many</h2>
    <p>
      Free, open source, and completely offline. Available for macOS and
      Windows. Your AI companion awaits.
    </p>
    <a
      href="https://github.com/maxprain12/dome/releases"
      target="_blank"
      rel="noopener"
      class="btn-white"
    >
      <DownloadIcon size={24} />
      Download Dome
    </a>
    <p class="cta-ascii" aria-hidden="true">  路 路 offline 路 路  </p>
  </div>
</section>

<style>
  .final-cta {
    padding: 120px 40px;
    color: white;
    text-align: center;
    position: relative;
    overflow: hidden;
    border-top: 1px solid rgba(255, 255, 255, 0.25);
  }

  .final-cta-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .final-cta-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: sepia(0.25) contrast(1.05);
  }

  .final-cta-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(89, 96, 55, 0.85) 0%,
      rgba(74, 80, 46, 0.9) 100%
    );
  }

  .final-cta .grain-overlay {
    position: absolute;
    inset: 0;
    opacity: 0.12;
    pointer-events: none;
  }

  .cta-content {
    max-width: 700px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .cartel-title {
    font-family: var(--font-cartel);
  }

  .cta-ascii {
    font-family: "SF Mono", Consolas, Monaco, monospace;
    font-size: 10px;
    letter-spacing: 0.2em;
    color: rgba(255, 255, 255, 0.5);
    margin-top: 1.5rem;
    margin-bottom: 0;
  }

  .final-cta h2 {
    color: white;
    margin-bottom: 24px;
    font-size: 52px;
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .final-cta p {
    font-size: 20px;
    opacity: 0.9;
    margin-bottom: 40px;
  }

  .btn-white {
    background: rgba(255, 252, 240, 0.98);
    color: var(--color-accent);
    padding: 18px 40px;
    font-size: 18px;
    font-weight: 700;
    border-radius: 4px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 12px;
    box-shadow: 0 2px 14px rgba(0,0,0,0.2), 0 0 0 1px rgba(0,0,0,0.1);
    transition: all 0.3s;
  }

  .btn-white:hover {
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 768px) {
    .final-cta {
      padding: 80px 20px;
    }

    .final-cta h2 {
      font-size: 32px;
    }

    .final-cta p {
      font-size: 18px;
    }
  }

  @media (max-width: 480px) {
    .final-cta {
      padding: 48px 16px;
    }

    .final-cta h2 {
      font-size: 22px;
      margin-bottom: 16px;
    }

    .final-cta p {
      font-size: 16px;
      margin-bottom: 24px;
    }

    .btn-white {
      padding: 14px 28px;
      font-size: 16px;
      width: 100%;
      justify-content: center;
    }
  }
</style>
