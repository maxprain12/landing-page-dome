---
import {
  Sparkles,
  Download,
  Github,
  FileText,
  StickyNote,
  Play,
  Link as LinkIcon,
  Search,
  Music,
  Image as ImageIcon,
} from "@lucide/astro";
---

<section class="hero-illustrated">
  <nav class="nav">
    <div class="nav-container">
      <a href="/" class="logo">
        <img src="/Many.svg" alt="Dome" width="36" height="36" />
        <span>Dome</span>
      </a>
      <div class="nav-cta">
        <a href="https://github.com/maxprain12/dome/releases" target="_blank" rel="noopener">Download Free</a>
      </div>
    </div>
  </nav>

  <div class="hero-wrapper">
    <div class="hero-content">
      <div class="hero-badge">
        <Sparkles size={16} color="currentColor" />
        <span>Meet Many, Your AI Companion</span>
      </div>

      <h1>
        Build your<br />
        <span class="gradient-text">personal</span><br />
        knowledge dome
      </h1>

      <p class="hero-description">
        Every note, paper, video, and idea connected in one intelligent space.
        Meet Many, your AI companion who guides you through research, learning,
        and creation—completely offline and always yours.
      </p>

      <div class="hero-cta">
        <a href="https://github.com/maxprain12/dome/releases" target="_blank" rel="noopener" class="btn-hero btn-primary">
          <Download size={20} />
          Start Building
        </a>
        <a
          href="https://github.com/maxprain12/dome"
          target="_blank"
          rel="noopener"
          class="btn-hero btn-secondary"
        >
          <Github size={20} />
          Open Source
        </a>
      </div>
    </div>

    <div class="hero-illustration">
      <div class="illustration-inner">
        <div class="knowledge-dome">
          <img src="/Many.svg" alt="Many" width="120" height="120" />
        </div>

        <div class="orbit orbit-1">
          <div class="orbit-node node-pdf">
            <div class="orbit-node-inner">
              <div class="content-node">
                <FileText size={32} color="var(--color-accent)" />
                <span>PDF</span>
              </div>
            </div>
          </div>
          <div class="orbit-node node-note">
            <div class="orbit-node-inner">
              <div class="content-node">
                <StickyNote size={32} color="var(--color-accent)" />
                <span>Note</span>
              </div>
            </div>
          </div>
          <div class="orbit-node node-video">
            <div class="orbit-node-inner">
              <div class="content-node">
                <Play size={32} color="var(--color-accent)" />
                <span>Video</span>
              </div>
            </div>
          </div>
          <div class="orbit-node node-link">
            <div class="orbit-node-inner">
              <div class="content-node">
                <LinkIcon size={32} color="var(--color-accent)" />
                <span>Link</span>
              </div>
            </div>
          </div>
        </div>

        <div class="orbit orbit-2">
          <div class="orbit-node node-ai">
            <div class="orbit-node-inner orbit-2-inner">
              <div class="content-node">
                <Sparkles size={32} color="var(--color-accent)" />
                <span>AI</span>
              </div>
            </div>
          </div>
          <div class="orbit-node node-search">
            <div class="orbit-node-inner orbit-2-inner">
              <div class="content-node">
                <Search size={32} color="var(--color-accent)" />
                <span>Search</span>
              </div>
            </div>
          </div>
          <div class="orbit-node node-audio">
            <div class="orbit-node-inner orbit-2-inner">
              <div class="content-node">
                <Music size={32} color="var(--color-accent)" />
                <span>Audio</span>
              </div>
            </div>
          </div>
          <div class="orbit-node node-image">
            <div class="orbit-node-inner orbit-2-inner">
              <div class="content-node">
                <ImageIcon size={32} color="var(--color-accent)" />
                <span>Image</span>
              </div>
            </div>
          </div>
        </div>

        <div class="orbit orbit-3"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-illustrated {
    padding: 140px 40px 80px;
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    min-height: 90vh;
    display: flex;
    flex-direction: column;
  }

  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--color-border);
    z-index: 1000;
    padding: 20px 0;
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 22px;
    font-weight: 800;
    color: var(--color-text);
    text-decoration: none;
  }

  .logo img {
    width: 36px;
    height: 36px;
  }

  .nav-cta a {
    padding: 10px 24px;
    background: var(--color-accent);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s;
  }

  .nav-cta a:hover {
    background: #4a502e;
    transform: translateY(-2px);
  }

  .hero-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: clamp(2rem, 4vw, 4rem);
    flex: 1;
    min-height: 500px;
    max-width: 1320px;
    margin: 0 auto;
    width: 100%;
  }

  .hero-content {
    max-width: 560px;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 6px 16px;
    background: var(--color-accent-light);
    border-radius: 100px;
    font-size: 13px;
    font-weight: 600;
    color: var(--color-accent);
    margin-bottom: 32px;
  }

  .hero-content h1 {
    font-size: 80px;
    font-weight: 900;
    line-height: 0.95;
    letter-spacing: -0.03em;
    margin-bottom: 24px;
  }

  .hero-description {
    font-size: 20px;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: 40px;
  }

  .hero-cta {
    display: flex;
    gap: 16px;
  }

  .btn-hero {
    padding: 16px 32px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    color: inherit;
  }

  .btn-primary {
    background: var(--color-accent);
    color: white;
    box-shadow: 0 4px 20px rgba(89, 96, 55, 0.3);
  }

  .btn-primary:hover {
    background: #4a502e;
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(89, 96, 55, 0.4);
  }

  .btn-secondary {
    background: white;
    color: var(--color-text);
    border: 2px solid var(--color-border);
  }

  .btn-secondary:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .hero-illustration {
    position: relative;
    width: 100%;
    min-height: 520px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .illustration-inner {
    position: relative;
    width: 520px;
    height: 520px;
    flex-shrink: 0;
  }

  .knowledge-dome {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 200px;
    height: 200px;
    background: var(--color-surface);
    border-radius: 50%;
    border: 3px solid var(--color-accent);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 20px 60px rgba(89, 96, 55, 0.2);
    animation: float 6s ease-in-out infinite;
    z-index: 5;
  }

  @keyframes float {
    0%,
    100% {
      transform: translate(-50%, -50%) translateY(0);
    }
    50% {
      transform: translate(-50%, -50%) translateY(-20px);
    }
  }

  .knowledge-dome img {
    width: 120px;
    height: 120px;
  }

  .orbit {
    position: absolute;
    top: 50%;
    left: 50%;
    border: 2px solid var(--color-border);
    border-radius: 50%;
    opacity: 0.5;
    will-change: transform;
  }

  .orbit-1 {
    width: 320px;
    height: 320px;
    margin-left: -160px;
    margin-top: -160px;
    animation: orbit-rotate 30s linear infinite;
  }

  .orbit-2 {
    width: 450px;
    height: 450px;
    margin-left: -225px;
    margin-top: -225px;
    animation: orbit-rotate 45s linear infinite reverse;
  }

  .orbit-3 {
    width: 580px;
    height: 580px;
    margin-left: -290px;
    margin-top: -290px;
    animation: orbit-rotate 60s linear infinite;
  }

  @keyframes orbit-rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  /* Nodos: posición en la órbita (giran con ella) */
  .orbit-node {
    position: absolute;
    z-index: 4;
  }

  /* Contrarrotación para que las tarjetas queden siempre rectas */
  .orbit-node-inner {
    animation: counter-rotate-30 30s linear infinite;
  }

  .orbit-2 .orbit-node-inner {
    animation: counter-rotate-45-rev 45s linear infinite;
  }

  @keyframes counter-rotate-30 {
    from {
      transform: rotate(-360deg);
    }
    to {
      transform: rotate(0deg);
    }
  }

  @keyframes counter-rotate-45-rev {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .orbit-node.node-pdf {
    top: 0;
    left: 50%;
    transform: translateX(-50%);
  }
  .orbit-node.node-note {
    top: 50%;
    right: 0;
    transform: translateY(-50%);
  }
  .orbit-node.node-video {
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
  }
  .orbit-node.node-link {
    top: 50%;
    left: 0;
    transform: translateY(-50%);
  }
  .orbit-node.node-ai {
    top: 15%;
    right: 15%;
  }
  .orbit-node.node-search {
    bottom: 15%;
    right: 15%;
  }
  .orbit-node.node-audio {
    bottom: 15%;
    left: 15%;
  }
  .orbit-node.node-image {
    top: 15%;
    left: 15%;
  }

  .content-node {
    width: 80px;
    height: 80px;
    background: var(--color-surface);
    border: 2px solid var(--color-border);
    border-radius: 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 6px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s, border-color 0.3s, box-shadow 0.3s;
  }

  .content-node:hover {
    transform: scale(1.1);
    border-color: var(--color-accent);
    box-shadow: 0 8px 30px rgba(89, 96, 55, 0.2);
  }

  .content-node span {
    font-size: 10px;
    font-weight: 600;
    color: var(--color-text-secondary);
  }

  @media (max-width: 1024px) {
    .hero-wrapper {
      grid-template-columns: 1fr;
    }

    .hero-illustration {
      display: none;
    }

    .hero-content {
      max-width: none;
    }

    .hero-content h1 {
      font-size: 56px;
    }
  }

  @media (max-width: 768px) {
    .hero-illustrated {
      padding: 120px 20px 60px;
    }

    .nav-container {
      padding: 0 20px;
    }

    .hero-content h1 {
      font-size: 40px;
    }

    .hero-description {
      font-size: 18px;
    }

    .hero-cta {
      flex-direction: column;
    }

    .btn-hero {
      justify-content: center;
    }
  }
</style>
