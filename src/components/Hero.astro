---
// Hero section component
---

<section class="hero">
  <div class="container">
    <nav class="nav">
      <a href="/" class="logo">
        <span class="logo-text">DOME</span>
      </a>

      <div class="nav-links">
        <a href="#features">Features</a>
        <a href="#use-cases">Use Cases</a>
        <a href="#open-source">Open Source</a>
        <a href="#download" class="nav-cta">Download</a>
      </div>

      <button class="mobile-menu-btn" aria-label="Toggle menu">
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>

      <div class="mobile-menu">
        <div class="mobile-menu-content">
          <a href="#features" class="mobile-link">Features</a>
          <a href="#use-cases" class="mobile-link">Use Cases</a>
          <a href="#open-source" class="mobile-link">Open Source</a>
          <a href="#download" class="nav-cta mobile-cta">Download</a>
        </div>
      </div>
    </nav>

    <div class="hero-content">
      <div class="badges animate-fade-in">
        <span class="badge">
          <svg
            width="14"
            height="14"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><rect x="3" y="11" width="18" height="11" rx="2" ry="2"
            ></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg
          >
          100% Offline
        </span>
        <span class="badge">
          <svg
            width="14"
            height="14"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><polyline points="16 18 22 12 16 6"></polyline><polyline
              points="8 6 2 12 8 18"></polyline></svg
          >
          Open Source
        </span>
        <span class="badge">
          <svg
            width="14"
            height="14"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path d="M12 2a10 10 0 1 0 10 10H12V2z"></path><path
              d="M12 2a10 10 0 0 1 10 10"></path><path d="M12 12 2.1 10.5"
            ></path></svg
          >
          AI Integrated
        </span>
        <span class="badge">
          <svg
            width="14"
            height="14"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect><line
              x1="8"
              y1="21"
              x2="16"
              y2="21"></line><line x1="12" y1="17" x2="12" y2="21"></line></svg
          >
          Cross-Platform
        </span>
      </div>

      <h1 class="hero-title animate-fade-in animate-delay-1">
        Your intelligent knowledge hub<br />
        <span class="highlight-text">for academic research</span>
      </h1>

      <p class="hero-subtitle animate-fade-in animate-delay-2">
        Dome is a desktop application for knowledge management and academic
        research. Organize notes, PDFs, videos, audios, and images with
        integrated AI. Notion-style editor, PDF annotations, academic
        bibliography, and semantic search. Everything works 100% offline.
      </p>

      <div class="hero-actions animate-fade-in animate-delay-3">
        <a href="#download" class="btn btn-primary">
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="7 10 12 15 17 10"></polyline>
            <line x1="12" y1="15" x2="12" y2="3"></line>
          </svg>
          Download Free
        </a>
        <a
          href="https://github.com/maxprain12/dome"
          target="_blank"
          rel="noopener"
          class="btn btn-secondary"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
          View on GitHub
        </a>
      </div>
    </div>

    <div class="hero-bento animate-fade-in animate-delay-4">
      <img src="/dashboard.png" alt="Dome Dashboard" class="hero-image" />
    </div>
  </div>
</section>

<script>
  const mobileBtn = document.querySelector(".mobile-menu-btn");
  const mobileMenu = document.querySelector(".mobile-menu");
  const mobileLinks = document.querySelectorAll(".mobile-link, .mobile-cta");

  mobileBtn?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("active");
    document.body.classList.toggle("no-scroll");
  });

  mobileLinks.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.remove("active");
      document.body.classList.remove("no-scroll");
    });
  });
</script>

<style>
  .hero {
    min-height: 100vh;
    padding-top: 1.5rem;
    position: relative;
    background: radial-gradient(
      circle at 50% 0%,
      #fafafa 0%,
      #ffffff 100%
    ); /* Subtle top light */
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    margin-bottom: 5rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .logo-icon {
    color: var(--text-primary); /* Monochrome logo */
    font-size: 1.25rem;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-links a {
    color: var(--text-secondary);
    font-size: 0.9rem;
    font-weight: 500;
    transition: color var(--transition-fast);
  }

  .nav-links a:hover {
    color: var(--text-primary);
  }

  .nav-cta {
    background: var(--bg-primary);
    border: 1px solid var(--border);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-fast);
  }

  .nav-cta:hover {
    border-color: var(--border-hover);
    box-shadow: var(--shadow-md);
    transform: translateY(-1px);
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin-inline: auto;
  }

  .badges {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-bottom: 2.5rem;
    opacity: 0;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--bg-tertiary); /* Light gray pill */
    border: 1px solid transparent;
    padding: 0.35rem 0.85rem;
    border-radius: 100px;
    font-size: 0.85rem;
    color: var(--text-secondary);
    font-weight: 500;
  }

  .badge-dot {
    width: 6px;
    height: 6px;
    background: #10b981; /* Green 500 */
    border-radius: 50%;
  }

  .badge-icon {
    font-size: 0.9rem;
    color: var(--text-primary);
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 5rem);
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.03em;
    color: var(--text-primary);
    opacity: 0;
  }

  .highlight-text {
    color: var(--text-secondary); /* Elegant contrast */
    font-style: italic;
    font-family: var(--font-sans);
    font-weight: 500;
  }

  .hero-subtitle {
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    color: var(--text-secondary);
    max-width: 540px;
    margin-inline: auto;
    margin-bottom: 3rem;
    font-weight: 400;
    line-height: 1.7;
    opacity: 0;
  }

  .hero-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    opacity: 0;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    border-radius: 10px;
    font-weight: 500;
    font-size: 0.95rem;
    transition: all var(--transition-base);
  }

  .btn-primary {
    background: var(--accent-primary); /* Black */
    color: white;
    box-shadow: var(--shadow-md);
    border: 1px solid transparent;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow:
      0 10px 25px -5px rgba(0, 0, 0, 0.1),
      0 8px 10px -6px rgba(0, 0, 0, 0.1);
    background: black;
  }

  .btn-secondary {
    background: var(--bg-primary);
    border: 1px solid var(--border);
    color: var(--text-primary);
    box-shadow: var(--shadow-sm);
  }

  .btn-secondary:hover {
    background: var(--bg-secondary);
    border-color: var(--border-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  /* New Hero Image Styles */
  .hero-bento {
    margin-top: 5rem;
    max-width: 1000px;
    margin-inline: auto;
    opacity: 0;
    position: relative;
    border-radius: 12px;
    box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.1);
    background: transparent;
  }

  .hero-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
    border: 1px solid var(--border);
    display: block;
  }

  .mobile-menu-btn,
  .mobile-menu {
    display: none;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }

    .mobile-menu-btn {
      display: block;
      background: none;
      border: none;
      color: var(--text-primary);
      cursor: pointer;
      z-index: 1001;
    }

    .mobile-menu {
      display: block;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: var(--bg-primary);
      z-index: 1000;
      padding: 6rem 2rem;
      transform: translateX(100%);
      transition: transform 0.3s ease-in-out;
    }

    .mobile-menu.active {
      transform: translateX(0);
    }

    .mobile-menu-content {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      align-items: center;
      text-align: center;
    }

    .mobile-link {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--text-primary);
      text-decoration: none;
    }

    .mobile-cta {
      width: 100%;
      text-align: center;
      justify-content: center;
      font-size: 1.25rem;
      padding: 1rem;
    }

    .section-header h2 {
      font-size: 2.5rem;
    }

    .hero-bento {
      margin-top: 3rem;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-actions {
      flex-direction: column;
      align-items: stretch;
      padding: 0 1rem;
    }

    .btn {
      justify-content: center;
    }
  }
</style>
