---
import { Upload, LayoutGrid, Link2, Sparkles } from "@lucide/astro";

const posts = [
  { slug: "post-collage-academic-researchers", title: "Academic researchers" },
  { slug: "post-collage-university-students", title: "University students" },
  { slug: "post-collage-knowledge-professionals", title: "Knowledge professionals" },
  { slug: "post-collage-writers-journalists", title: "Writers and journalists" },
];

const steps = [
  {
    number: 1,
    title: "Capture Everything",
    description:
      "Import PDFs, save web articles, transcribe voice memos, bookmark videos. Many welcomes everything into your dome.",
    icon: Upload,
    side: "left",
  },
  {
    number: 2,
    title: "Let Many Organize",
    description:
      "Many automatically tags, categorizes, and connects your content. No manual filing neededâ€”your AI companion does the heavy lifting.",
    icon: LayoutGrid,
    side: "right",
  },
  {
    number: 3,
    title: "Annotate & Connect",
    description:
      "Highlight PDFs, write notes, mention resources. Your knowledge graph grows organically with Many's help.",
    icon: Link2,
    side: "left",
  },
  {
    number: 4,
    title: "Discover Insights with Many",
    description:
      "Ask Many questions, explore connections, generate bibliographies. Your AI companion reveals patterns and insights you'd never find alone.",
    icon: Sparkles,
    side: "right",
  },
];
---

<section id="journey" class="journey-section">
  <div class="section-header-center">
    <div class="section-label success">Your Journey</div>
    <h2 class="cartel-title">From chaos to clarity in 4 steps</h2>
  </div>

  <div class="timeline-container">
    <div class="timeline-line"></div>

    {
      steps.map((step) => {
        const Icon = step.icon;
        const isRight = step.side === "right";
        return (
          <div class="journey-step">
            {!isRight ? (
              <div class="step-content">
                <h3 class="step-title">{step.title}</h3>
                <p class="step-description">{step.description}</p>
              </div>
            ) : (
              <div class="step-illustration">
                <Icon size={48} color="var(--color-text-secondary)" />
              </div>
            )}
            <div class="step-number">{step.number}</div>
            {isRight ? (
              <div class="step-content right">
                <h3 class="step-title">{step.title}</h3>
                <p class="step-description">{step.description}</p>
              </div>
            ) : (
              <div class="step-illustration">
                <Icon size={48} color="var(--color-text-secondary)" />
              </div>
            )}
          </div>
        );
      })
    }
  </div>

  <div id="recursos" class="journey-resources">
    <div class="resources-header">
      <span class="section-label success">Resources</span>
      <h3 class="cartel-title">Use cases for social</h3>
      <p class="resources-subtitle">
        LinkedIn-ready posts in collage style: grain, stock imagery, and success stories. Download and share.
      </p>
    </div>
    <div class="resources-grid">
      {
        posts.map((post) => (
          <article class="resource-card">
            <a
              href={`/linkedin-posts/${post.slug}.png`}
              target="_blank"
              rel="noopener"
              class="resource-link"
              title={`Download: ${post.title}`}
            >
              <img
                src={`/linkedin-posts/${post.slug}.webp`}
                alt={post.title}
                width="600"
                height="750"
                loading="lazy"
              />
              <div class="resource-overlay">
                <span class="resource-title">{post.title}</span>
                <span class="resource-cta">View / Download image</span>
              </div>
            </a>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  .journey-section {
    padding: 120px 40px;
    background: var(--color-bg);
    border-top: 1px solid var(--color-border);
  }

  .cartel-title {
    font-family: var(--font-cartel);
  }

  .section-header-center {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 80px;
  }

  .section-label {
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 16px;
  }

  .section-label.success {
    color: var(--color-accent);
  }

  .section-header-center h2 {
    font-size: 52px;
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .timeline-container {
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
  }

  .timeline-line {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 3px;
    margin-left: -1.5px;
    background: linear-gradient(
      180deg,
      transparent,
      var(--color-accent),
      transparent
    );
  }

  .journey-step {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 60px;
    margin-bottom: 80px;
    align-items: center;
  }

  .step-content {
    text-align: right;
    background: rgba(255, 252, 240, 0.98);
    padding: 1.5rem 1.75rem;
    border-radius: 4px;
    box-shadow: 0 2px 14px rgba(0,0,0,0.08), 0 0 0 1px rgba(0,0,0,0.04);
  }

  .step-content.right {
    text-align: left;
  }

  .step-number {
    width: 60px;
    height: 60px;
    background: var(--color-accent);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    font-weight: 800;
    box-shadow: 0 4px 20px rgba(89, 96, 55, 0.35);
    position: relative;
    z-index: 10;
  }

  .step-title {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 12px;
  }

  .step-description {
    font-size: 15px;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .step-illustration {
    width: 200px;
    max-width: 100%;
    height: 150px;
    background: var(--color-surface);
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 14px rgba(0,0,0,0.08), 0 0 0 1px var(--color-border);
  }

  .journey-resources {
    max-width: 1000px;
    margin: 0 auto;
    margin-top: 100px;
    padding-top: 80px;
    border-top: 1px solid var(--color-border);
  }

  .resources-header {
    text-align: center;
    max-width: 600px;
    margin-inline: auto;
    margin-bottom: 2.5rem;
  }

  .resources-header .section-label {
    margin-bottom: 12px;
  }

  .resources-header h3 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .resources-subtitle {
    color: var(--color-text-secondary);
    font-size: 1.05rem;
    line-height: 1.6;
  }

  .resources-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .resource-card {
    border-radius: 4px;
    overflow: hidden;
    border: 1px solid var(--color-border);
    box-shadow: 0 2px 14px rgba(0,0,0,0.08), 0 0 0 1px rgba(0,0,0,0.04);
    background: rgba(255, 252, 240, 0.98);
    transition: box-shadow 0.3s, transform 0.3s;
  }

  .resource-card:hover {
    box-shadow: 0 8px 28px rgba(89, 96, 55, 0.12);
    transform: translateY(-2px);
  }

  .resource-link {
    display: block;
    position: relative;
    color: inherit;
  }

  .resource-link img {
    width: 100%;
    height: auto;
    display: block;
    vertical-align: middle;
  }

  .resource-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6) 0%, transparent 50%);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 1.25rem;
    opacity: 0;
    transition: opacity 0.3s;
  }

  .resource-card:hover .resource-overlay {
    opacity: 1;
  }

  .resource-title {
    font-weight: 600;
    font-size: 1.1rem;
    color: #fff;
  }

  .resource-cta {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.9);
    margin-top: 0.25rem;
  }

  @media (min-width: 900px) {
    .resources-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (max-width: 600px) {
    .resources-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  @media (max-width: 768px) {
    .journey-section {
      padding: 80px 20px;
    }

    .section-header-center h2 {
      font-size: 36px;
    }

    .journey-step {
      grid-template-columns: 1fr;
      gap: 24px;
      margin-bottom: 48px;
      text-align: center;
    }

    .step-content,
    .step-content.right {
      text-align: center;
    }

    .step-number {
      margin: 0 auto;
    }

    .step-illustration {
      margin: 0 auto;
    }

    .timeline-line {
      left: 30px;
      margin-left: 0;
    }

    .journey-step {
      padding-left: 60px;
      position: relative;
    }

    .step-number {
      position: absolute;
      left: 0;
      margin-left: 0;
    }

    .journey-resources {
      margin-top: 60px;
      padding-top: 48px;
    }
  }

  @media (max-width: 480px) {
    .journey-section {
      padding: 48px 16px;
    }

    .section-header-center {
      margin-bottom: 48px;
    }

    .section-header-center h2 {
      font-size: 24px;
    }

    .journey-step {
      padding-left: 48px;
      margin-bottom: 36px;
    }

    .timeline-line {
      left: 22px;
    }

    .step-number {
      width: 44px;
      height: 44px;
      font-size: 18px;
    }

    .step-content {
      padding: 1rem 1.25rem;
    }

    .step-title {
      font-size: 18px;
    }

    .step-description {
      font-size: 14px;
    }

    .step-illustration {
      width: 100%;
      max-width: 160px;
      height: 120px;
    }

    .journey-resources {
      margin-top: 40px;
      padding-top: 32px;
    }

    .resources-header h3 {
      font-size: 1.35rem;
    }

    .resources-subtitle {
      font-size: 0.95rem;
    }
  }
</style>
