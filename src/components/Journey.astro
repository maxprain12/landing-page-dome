---
import { Upload, LayoutGrid, Link2, Sparkles } from "@lucide/astro";

const steps = [
  {
    number: 1,
    title: "Capture Everything",
    description:
      "Import PDFs, save web articles, transcribe voice memos, bookmark videos. Many welcomes everything into your dome.",
    icon: Upload,
    side: "left",
  },
  {
    number: 2,
    title: "Let Many Organize",
    description:
      "Many automatically tags, categorizes, and connects your content. No manual filing neededâ€”your AI companion does the heavy lifting.",
    icon: LayoutGrid,
    side: "right",
  },
  {
    number: 3,
    title: "Annotate & Connect",
    description:
      "Highlight PDFs, write notes, mention resources. Your knowledge graph grows organically with Many's help.",
    icon: Link2,
    side: "left",
  },
  {
    number: 4,
    title: "Discover Insights with Many",
    description:
      "Ask Many questions, explore connections, generate bibliographies. Your AI companion reveals patterns and insights you'd never find alone.",
    icon: Sparkles,
    side: "right",
  },
];
---

<section id="journey" class="journey-section">
  <div class="section-header-center">
    <div class="section-label success">Your Journey</div>
    <h2>From chaos to clarity in 4 steps</h2>
  </div>

  <div class="timeline-container">
    <div class="timeline-line"></div>

    {
      steps.map((step) => {
        const Icon = step.icon;
        const isRight = step.side === "right";
        return (
          <div class="journey-step">
            {!isRight ? (
              <div class="step-content">
                <h3 class="step-title">{step.title}</h3>
                <p class="step-description">{step.description}</p>
              </div>
            ) : (
              <div class="step-illustration">
                <Icon size={48} color="var(--color-text-secondary)" />
              </div>
            )}
            <div class="step-number">{step.number}</div>
            {isRight ? (
              <div class="step-content right">
                <h3 class="step-title">{step.title}</h3>
                <p class="step-description">{step.description}</p>
              </div>
            ) : (
              <div class="step-illustration">
                <Icon size={48} color="var(--color-text-secondary)" />
              </div>
            )}
          </div>
        );
      })
    }
  </div>
</section>

<style>
  .journey-section {
    padding: 120px 40px;
    background: var(--color-surface);
  }

  .section-header-center {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 80px;
  }

  .section-label {
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 16px;
  }

  .section-label.success {
    color: var(--color-accent);
  }

  .section-header-center h2 {
    font-size: 52px;
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .timeline-container {
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
  }

  .timeline-line {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 3px;
    margin-left: -1.5px;
    background: linear-gradient(
      180deg,
      transparent,
      var(--color-accent),
      transparent
    );
  }

  .journey-step {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 60px;
    margin-bottom: 80px;
    align-items: center;
  }

  .step-content {
    text-align: right;
  }

  .step-content.right {
    text-align: left;
  }

  .step-number {
    width: 60px;
    height: 60px;
    background: var(--color-accent);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    font-weight: 800;
    box-shadow: 0 0 30px rgba(89, 96, 55, 0.4);
    position: relative;
    z-index: 10;
  }

  .step-title {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 12px;
  }

  .step-description {
    font-size: 15px;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .step-illustration {
    width: 200px;
    height: 150px;
    background: var(--color-bg);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .journey-section {
      padding: 80px 20px;
    }

    .journey-step {
      grid-template-columns: 1fr;
      gap: 24px;
      margin-bottom: 48px;
      text-align: center;
    }

    .step-content,
    .step-content.right {
      text-align: center;
    }

    .step-number {
      margin: 0 auto;
    }

    .step-illustration {
      margin: 0 auto;
    }

    .timeline-line {
      left: 30px;
      margin-left: 0;
    }

    .journey-step {
      padding-left: 60px;
      position: relative;
    }

    .step-number {
      position: absolute;
      left: 0;
      margin-left: 0;
    }
  }
</style>
