---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Dome - Tu conocimiento, siempre contigo",
  description = "Aplicación de escritorio 100% offline para gestión de conocimiento e investigación académica. Open source con IA integrada.",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="dome, knowledge management, research, academic, offline, open source, AI"
    />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Outfit:wght@600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* Vento Mode Colors - Porcelain & Clean */
    --bg-primary: #ffffff;
    --bg-secondary: #fafafa; /* Soft porcelain white */
    --bg-tertiary: #f4f4f6; /* Very light gray for subtle contrast */

    --accent-primary: #18181b; /* Jet Black for high contrast actions */
    --accent-secondary: #52525b; /* Zinc 600 */
    --accent-gradient: none; /* No gradients in Vento mode */

    --text-primary: #18181b; /* Zinc 900 */
    --text-secondary: #52525b; /* Zinc 600 */
    --text-muted: #a1a1aa; /* Zinc 400 */

    --glass: rgba(255, 255, 255, 0.8);
    --glass-hover: rgba(255, 255, 255, 0.95);

    --border: #e4e4e7; /* Zinc 200 */
    --border-hover: #d4d4d8; /* Zinc 300 */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md:
      0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);

    /* Typography */
    --font-sans: "Inter", -apple-system, BlinkMacSystemFont, sans-serif;
    --font-display: "Outfit", var(--font-sans);

    /* Spacing */
    --section-padding: clamp(4rem, 10vw, 8rem);
    --container-width: min(1200px, 90vw);

    /* Transitions */
    --transition-fast: 150ms ease;
    --transition-base: 250ms ease;
    --transition-slow: 400ms ease;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-sans);
    background: var(--bg-primary);
    color: var(--text-primary);
    line-height: 1.6;
    overflow-x: hidden;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Subtle grain or texture could be added here if requested, but staying clean for now */

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-display);
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: var(--text-primary);
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  /* Utility classes */
  .container {
    width: var(--container-width);
    margin-inline: auto;
  }

  .gradient-text {
    color: var(--text-primary); /* Fallback/Override */
    background: none;
    -webkit-background-clip: border-box;
    -webkit-text-fill-color: currentcolor;
  }

  /* Animation utilities */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in-up 0.8s ease-out forwards;
  }

  .animate-delay-1 {
    animation-delay: 0.1s;
  }
  .animate-delay-2 {
    animation-delay: 0.2s;
  }
  .animate-delay-3 {
    animation-delay: 0.3s;
  }
  .animate-delay-4 {
    animation-delay: 0.4s;
  }
</style>
