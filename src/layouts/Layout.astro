---
interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonicalUrl?: string;
}

const {
  title = "Dome - Knowledge Management & Academic Research | 100% Offline",
  description = "Dome is a desktop application for knowledge management and academic research. Organize notes, PDFs, videos, and more with integrated AI. 100% offline, open source. Notion-style editor, PDF annotations, academic bibliography, and more.",
  ogImage = "/dashboard.png",
  canonicalUrl: canonicalUrlProp,
} = Astro.props;

const siteUrl = Astro.site?.href || "https://dome.dowi.es";
const canonicalUrl = canonicalUrlProp ?? `${siteUrl}${Astro.url.pathname}`;
const fullOgImage = ogImage.startsWith("http") ? ogImage : `${siteUrl}${ogImage}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="knowledge management, academic research, offline notes, PDF annotations, local AI, Ollama, Notion editor, academic bibliography, desktop knowledge management app, offline academic research software, Notion-style note editor desktop, Dome, PDF viewer, AI assistant, semantic search, citation manager"
    />
    <meta name="author" content="Alder Velasquez" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullOgImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Dome" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImage} />

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "Dome",
      "applicationCategory": "DesktopApplication",
      "operatingSystem": ["macOS", "Windows", "Linux"],
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "description": description,
      "url": siteUrl,
      "author": {
        "@type": "Person",
        "name": "Alder Velasquez",
        "email": "alder.velasquezobando@gmail.com"
      },
      "license": "https://github.com/maxprain12/dome/blob/main/LICENSE",
      "softwareVersion": "1.0.0",
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "5",
        "ratingCount": "1"
      },
      "featureList": [
        "Offline knowledge management",
        "Notion-style editor",
        "PDF annotations",
        "Integrated AI (OpenAI, Anthropic, Ollama)",
        "Semantic search",
        "Academic library with citations",
        "WhatsApp integration",
        "Web scraper",
        "YouTube integration"
      ]
    })} />

    <!-- Preconnect for Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* Dome + Many reference palette */
    --color-bg: #fafafa;
    --color-surface: #ffffff;
    --color-text: #1a1a1a;
    --color-text-secondary: #6b6b6b;
    --color-accent: #596037;
    --color-accent-light: #e0eab4;
    --color-border: #e5e5e5;
    --color-problem: #e57b7b;

    /* Aliases for compatibility */
    --bg-primary: var(--color-surface);
    --bg-secondary: var(--color-bg);
    --bg-tertiary: #f4f4f6;
    --accent-primary: var(--color-accent);
    --accent-secondary: var(--color-text-secondary);
    --text-primary: var(--color-text);
    --text-secondary: var(--color-text-secondary);
    --text-muted: #a1a1aa;
    --glass: rgba(255, 255, 255, 0.9);
    --glass-hover: rgba(255, 255, 255, 0.95);
    --border: var(--color-border);
    --border-hover: var(--color-accent);
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md:
      0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);

    /* Typography */
    --font-sans: "Inter", -apple-system, BlinkMacSystemFont, sans-serif;
    --font-display: var(--font-sans);

    /* Spacing */
    --section-padding: clamp(4rem, 10vw, 8rem);
    --container-width: min(1400px, 90vw);

    /* Transitions */
    --transition-fast: 150ms ease;
    --transition-base: 250ms ease;
    --transition-slow: 400ms ease;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-sans);
    background: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    overflow-x: hidden;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Subtle grain or texture could be added here if requested, but staying clean for now */

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-display);
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: var(--color-text);
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  /* Utility classes */
  .container {
    width: var(--container-width);
    margin-inline: auto;
  }

  .gradient-text {
    background: linear-gradient(
      135deg,
      var(--color-text) 0%,
      var(--color-accent) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Animation utilities */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .animate-fade-in {
    animation: fade-in-up 0.9s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .animate-delay-1 {
    animation-delay: 0.15s;
  }
  .animate-delay-2 {
    animation-delay: 0.3s;
  }
  .animate-delay-3 {
    animation-delay: 0.45s;
  }
  .animate-delay-4 {
    animation-delay: 0.6s;
  }
</style>
